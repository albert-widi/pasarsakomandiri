<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <title>Login</title>
    <!-- CSS -->
    <link media="screen,projection" rel="stylesheet" type="text/css" href="/assets/css/materialize.css"></link>
    <script>
        $(document).ready(function(){
                        $("button").click(function(){


                        user_name = $("#username").val();
                        pass = $("#password").val();

                        var form_data = {
                            username: user_name,
                            password: pass
                        }

                        if (user_name=='' ||pass=='')
                        {
                            alert ("Username or Password Can't be empty");
                            exit();
                        }


                        else{
                            $.post("api/user/login",
                            {
                                username:user_name,
                                password:pass,
                            },
                        function(data,status){
                                //alert("Data: " + data + "\nStatus: " + status);
                                if (data.Status) {
                                    window.location.replace("/user/user_auth");
                                }

                            });

                            };
                        });
                    });
    </script>
</head>

<body>

<div class="container">
    <div class="row">
        <div class="col s4 offset-s4" style="margin-top:15%">
            <div class="card hoverable">
                <div class="card-panel #0097a7 cyan darken-2">
                    <h3 class="center" style="color: white"><b>Login</b></h3>
                </div>
                <div class="card-content">
                    <div class="row section">
                        <div class="input-field col s12">
                          <input id="username" type="text" class="validate">
                          <label for="last_name">Username</label>
                        </div>
                        <div class="input-field col s12" style="margin-top:30px">
                          <input id="password" type="password" class="validate">
                          <label for="last_name">Password</label>
                        </div>
                        <div class="col s12" style="margin-top:30px">
                            <button class="waves-effect waves-light btn">Login</button>
                        </div>
                    </div>
                </div>
                <div class="card-action #0097a7 cyan darken-2">
                    <p class="center" style="color:white">Pasar Sako Mandiri</p>
                </div>
            </div>
        </div>
    </div>
</div>
    
    <!-- script -->
    <script src="assets/js/jquery-2.2.0.min.js"></script>
    <script src="assets/js/materialize.js"></script>
</body>
</html>

